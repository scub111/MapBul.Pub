{
   "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es6",
      "sourceMap": false,
      "outDir": "./dist",
      "baseUrl": "./",
      "incremental": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": false, 
      "lib": [
         "es6",
         "es7",
         "dom"
      ],
      "paths": {
         "src/*": ["./src/*"],
         "app/*": ["./app/*"],
      }
   },
   "exclude": [
      "node_modules",
      "dist"
   ]
}