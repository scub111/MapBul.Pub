{
   "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es6",
      "sourceMap": false,
      "incremental": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": false, 
      "lib": [
         "es6",
         "es7",
         "dom"
      ],
      "baseUrl": "./",  
      "paths": {
          "server/*": ["./src/server/*"],
          "client/*": ["./src/client/*"],
          "codegen/*": ["./src/codegen/*"],
      }
   }
}