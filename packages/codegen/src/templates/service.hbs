export class {{serviceName}} implements BaseService<{{interfaceName}}> {
  constructor() {
    this.connection = dbConnectionSingleton.getInstance();
  }

  private connection: IDbConnection;

  async getAll(query: GetAllQueryDTO): Promise<PageContent<{{interfaceName}}>> {
    let additional = '';
    const isPagination = query.page && query.size;
    if (isPagination) {
      const offset = (query.page - 1) * query.size;
      additional = `limit ${offset},${query.size}; SELECT count(*) FROM {{tableName}}`;
    }
    const records = await this.connection.query(`
      SELECT
        {{#each fields}}
        \`{{field}}\`{{separator}}
        {{/each}} 
      FROM {{tableName}} ${additional}`);

    return {
      content: isPagination ? records[0] : records,
      totalPages: isPagination ? Number(Math.ceil(records[1][0]['count(*)'] / query.size)) : 1,
    };
  }

