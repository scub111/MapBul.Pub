$sizeStepRound = 12px;
$sizeStepHeight = 76px;

.steps
  display: inline-flex;
  align-items: flex-end;

.step
  display: flex;
  position: relative;
  height: $sizeStepHeight;
  user-select none;
  max-width: 300px;
  text-align: right;

  & .stepNumber
    width: $sizeStepRound;
    height: $sizeStepRound;
    line-height: "calc(%s - 2px)" % ($sizeStepRound);
    font-size $fontSizeMedium;
    color: #D7D7D7;
    background-color: #FFFFFF;
    border-radius: 50%;
    flex: 0 0 auto;
    text-align: center;
    border: solid 1.5px #D7D7D7;
    justify-content: center;
    align-items: center;

    svg {
      flex: 1 0 auto;
    }

    &:before, &:after
      position: absolute;
      content: ' ';
      display: block;
      height: "calc((%s - %s)/2)" % ($sizeStepHeight $sizeStepRound + 20);
      width: 2px;
      background-color: #d2d6e1;
      bottom: "calc((%s - %s)/2 + %s)" % ($sizeStepHeight $sizeStepRound $sizeStepRound + 10);

    &:after
      bottom: 0;

  & .stepText
    font-size: $fontSizeSmall;
    color: #d2d6e1;
    padding-right: 16px;

  &.selected
    cursor: default;
    // background-color: #FFFFFF;

    & .stepNumber
      background-color: #4740a1;
      border: solid 1.5px #4740a1;
      color: #FFFFFF0;

      &:before {
        background-color: #4740a1;
      }

    & .stepText
      color: #30303d;

  &.done
    & .stepNumber
      background-color: transparent;
      border: solid 1.5px #4740a1;
      color: #FFFFFF0;

      &:after, &:before {
        background-color: #4740a1;
      }

    & .stepText
      color: #30303d;

  &.last {
    & .stepNumber {
      background-color: transparent;
      border: 1.5px solid transparent;

      &:before {
        background-color: #4740a1;
      }
    }
  }


  &.disabled
    color: #D7D7D7;
    cursor: default;

  &:last-child .stepNumber:after {
    display: none;
  }

  &:first-child .stepNumber:before {
    display: none;
  }
